<!--begin::Table row-->
<tr>
	<!--begin::Category=-->
	<td>
		<div class="d-flex align-items-center">
			<div class="ms-5">
				<!--begin::Title-->
				<a href="{{ path('admin_languages_edit', { 'id': entity.id }) }}" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">{{ entity.title }}</a>
				<!--end::Title-->
			</div>
		</div>
	</td>
	<!--end::Category=-->
	<!--begin::Status=-->
	<td class="text-end pe-0">
		<div class="d-flex align-items-center">
			{% if entity.status == 1 %}
				<div class="badge badge-light-success">{{"table.enabled"|trans}}</div>
			{% endif %}
			{% if entity.status == 2 %}
				<div class="badge badge-light-danger">{{"table.disabled"|trans}}</div>
			{% endif %}
		</div>
	</td>
	<!--end::Status=-->
	<!--begin::Action=-->
	<td class="text-end pe-0">
		<div class="d-flex align-items-center">
			<a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">{{ "table.action"|trans }}
			<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
			<span class="svg-icon svg-icon-5 m-0">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor" />
				</svg>
			</span>
			<!--end::Svg Icon--></a>
			<!--begin::Menu-->
			<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
				<!--begin::Menu item-->
				<div class="menu-item px-3">
					<a href="{{ path('admin_languages_edit', { 'id': entity.id }) }}" class="menu-link px-3">{{"table.edit"|trans}}</a>
				</div>
				<!--end::Menu item-->
				<!--begin::Menu item-->
				<div class="menu-item px-3">
					<a href="{{ path('admin_languages_delete', { 'id': entity.id }) }}" onclick="return confirm('{{"table.deleteconfirmationmsg"|trans}}')" class="menu-link px-3" data-kt-ecommerce-product-filter="delete_row">{{"table.delete"|trans}}</a>
				</div>
				<!--end::Menu item-->
			</div>
			<!--end::Menu-->
		</div>
	</td>
	<!--end::Action=-->
</tr>
<!--end::Table row-->